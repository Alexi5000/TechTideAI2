# ─── TechTideAI Environment Variables ────────────────────
# Copy to .env and fill in your values

# ─── Server ──────────────────────────────────────────────
NODE_ENV=development
HOST=0.0.0.0
PORT=4050
CORS_ORIGIN=http://localhost:5180

# ─── Authentication ──────────────────────────────────────
# Leave empty for open access (dev mode)
API_KEY=

# ─── Organization ────────────────────────────────────────
DEFAULT_ORG_ID=00000000-0000-0000-0000-000000000001

# ─── LLM Providers ──────────────────────────────────────
DEFAULT_LLM_PROVIDER=openai
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# ─── Agent Runtime ───────────────────────────────────────
MASTRA_MODEL=openai/gpt-4o
MASTRA_TOOL_POLICY=shared

# ─── Supabase ────────────────────────────────────────────
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# ─── Weaviate (Vector Store) ─────────────────────────────
WEAVIATE_URL=
WEAVIATE_API_KEY=

# ─── Embeddings ──────────────────────────────────────────
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
KNOWLEDGE_CHUNK_WORDS=200
KNOWLEDGE_CHUNK_OVERLAP_WORDS=40
KNOWLEDGE_EMBED_BATCH_SIZE=50
